diff --git a/css/styles.css b/css/styles.css
index 9abf06c..51f091c 100644
--- a/css/styles.css
+++ b/css/styles.css
@@ -298,4 +298,66 @@ input:checked + .toggle-slider {
 
 input:checked + .toggle-slider:before {
   transform: translateX(20px);
+}
+
+/* Progress bar width classes */
+.progress-width-30 {
+  width: 30%;
+}
+.progress-width-45 {
+  width: 45%;
+}
+.progress-width-60 {
+  width: 60%;
+}
+.progress-width-65 {
+  width: 65%;
+}
+.progress-width-70 {
+  width: 70%;
+}
+.progress-width-78 {
+  width: 78%;
+}
+.progress-width-80 {
+  width: 80%;
+}
+.progress-width-85 {
+  width: 85%;
+}
+.progress-width-87 {
+  width: 87%;
+}
+.progress-width-89 {
+  width: 89%;
+}
+.progress-width-92 {
+  width: 92%;
+}
+.progress-width-93 {
+  width: 93%;
+}
+
+/* Scrollbar styles with vendor prefixes for better compatibility */
+::-webkit-scrollbar {
+  width: 10px;
+}
+
+::-webkit-scrollbar-track {
+  background: #1e293b;
+}
+
+::-webkit-scrollbar-thumb {
+  background: #334155;
+  border-radius: 5px;
+}
+
+::-webkit-scrollbar-thumb:hover {
+  background: #475569;
+}
+
+/* Firefox */
+* {
+  scrollbar-width: thin;
+  scrollbar-color: #334155 #1e293b;
 } 
\ No newline at end of file
